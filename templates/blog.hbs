{{> head}}
<div class="header">
    <img src="/images/logo.png"/>
    <ul>
    {{#each posts}}
      <li><a href="/blog/{{this.slug}}" hx-get="/blog/content/{{this.slug}}" hx-target="#content" hx-replace-url="/blog/{{slug}}">{{this.title}}</a> ({{this.date}})</li>
    {{/each}}
    </ul>
  </div>

<div id="content" hx-get="/blog/content/{{current}}" hx-trigger="load delay:100ms" hx-target="#content"></div>

